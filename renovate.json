{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track toolbox image version references in release-coupled docs",
      "managerFilePatterns": [
        "/^docs\\/runtime-contract\\.md$/",
        "/^docs\\/support-matrix\\.md$/"
      ],
      "matchStrings": [
        "quay\\.io\\/l-it\\/ee-wunder-toolbox-ubi9:(?<currentValue>[^\\s`]+)"
      ],
      "depNameTemplate": "quay.io/l-it/ee-wunder-toolbox-ubi9",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Track ansible-nav default toolbox image",
      "managerFilePatterns": [
        "/^ansible\\/scripts\\/ansible-nav$/"
      ],
      "matchStrings": [
        "image=\"\\$\\{ANSIBLE_TOOLBOX_IMAGE:-quay\\.io\\/l-it\\/ee-wunder-toolbox-ubi9:(?<currentValue>[^\"}]+)\\}\""
      ],
      "depNameTemplate": "quay.io/l-it/ee-wunder-toolbox-ubi9",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
